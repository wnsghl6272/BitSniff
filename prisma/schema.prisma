generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BitcoinTransaction {
  id          Int      @id @default(autoincrement())
  hash        String   @unique
  blockNumber BigInt
  timestamp   DateTime
  value       Decimal  @db.Decimal(18, 8)
  fee         Decimal  @db.Decimal(18, 8)
  fromAddress String
  toAddress   String
  createdAt   DateTime @default(now())

  @@map("bitcoin_transactions")
  @@index([blockNumber])
  @@index([timestamp])
  @@index([fromAddress])
  @@index([toAddress])
}

model EthereumTransaction {
  id          Int      @id @default(autoincrement())
  hash        String   @unique
  blockNumber BigInt
  timestamp   DateTime
  value       Decimal  @db.Decimal(36, 18)
  gasFee      Decimal  @db.Decimal(36, 18)
  gasPrice    Decimal  @db.Decimal(36, 18)
  gasUsed     BigInt
  fromAddress String
  toAddress   String
  createdAt   DateTime @default(now())

  @@map("ethereum_transactions")
  @@index([blockNumber])
  @@index([timestamp])
  @@index([fromAddress])
  @@index([toAddress])
}
