generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BitcoinTransaction {
  id          Int      @id @default(autoincrement())
  hash        String   @unique
  blockNumber BigInt
  timestamp   DateTime
  value       Decimal  @db.Decimal(36, 8)
  fee         Decimal  @db.Decimal(36, 8)
  fromAddress String
  toAddress   String
  createdAt   DateTime @default(now())

  @@map("bitcoin_transactions")
  @@index([blockNumber])
  @@index([timestamp])
  @@index([fromAddress])
  @@index([toAddress])
}

model EthereumTransaction {
  id          Int      @id @default(autoincrement())
  hash        String   @unique
  blockNumber BigInt
  timestamp   DateTime
  value       Decimal  @db.Decimal(78, 18)
  gasFee      Decimal  @db.Decimal(78, 18)
  gasPrice    Decimal  @db.Decimal(78, 18)
  gasUsed     BigInt
  fromAddress String
  toAddress   String
  createdAt   DateTime @default(now())

  @@map("ethereum_transactions")
  @@index([blockNumber])
  @@index([timestamp])
  @@index([fromAddress])
  @@index([toAddress])
}

model blockchairStats {
  id        Int      @id @default(autoincrement())
  timestamp String
  network   String
  data      Json
  createdAt DateTime @default(now())

  @@map("blockchair_stats")
  @@index([timestamp])
  @@index([network])
  @@unique([timestamp, network])
}

model Wallet {
  address   String
  network   String
  data      Json
  updatedAt DateTime @updatedAt

  @@id([address, network])
  @@index([address])
  @@index([network])
  @@map("wallets")
}
